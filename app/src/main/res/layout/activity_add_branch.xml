<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_branch"
    >
    <ImageButton
        android:id="@+id/back"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/baseline_arrow_back_24" />


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        android:background="@drawable/add_new_branch"
        android:layout_marginTop="80sp"
        />


    <EditText
        android:id="@+id/branch"
        android:layout_width="300sp"
        android:layout_height="45sp"
        android:layout_alignTop="@+id/welcome"
        android:layout_marginTop="175dp"
        android:background="@drawable/edit"
        android:drawableStart="@drawable/branch_img"
        android:drawablePadding="10dp"
        android:hint="Enter New Branch"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:textSize="23dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_branch"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="262dp"
        android:background="@drawable/rectangle_2"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Add Branch"
        android:textAppearance="@style/register" />

</RelativeLayout>